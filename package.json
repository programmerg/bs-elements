{
  "name": "bs-elements",
  "description": "Bootstrap 5-based, framework-agnostic Web Component library",
  "version": "0.1.0",
  "keywords": [
    "bootstrap",
    "components",
    "web components",
    "custom elements",
    "html elements",
    "ui library",
    "ui framework"
  ],
  "homepage": "https://github.com/programmerg/bs-elements",
  "author": "Gelencsér Gergő",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github:programmerg/bs-elements.git"
  },
  "bugs": {
    "url": "https://github.com/programmerg/bs-elements/issues"
  },
  "type": "module",
